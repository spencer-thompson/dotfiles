{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "anthropic/claude-sonnet-4-20250514",
  "autoshare": false,
  "autoupdate": true,
  "keybinds": {
    "leader": "ctrl+k"
  },
  "mode": {
    "docs": {
      "prompt": "{file:./prompts/documentation.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true
      }
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["bun", "x", "@executeautomation/playwright-mcp-server"],
      "enabled": true
    }
  }
}
