[user]
    email = sthompson.dev@outlook.com
    name = Spencer

[credential]
    helper = cache

[core]
    editor = nvim

[init]
    defaultBranch = main

[core]
    pager = delta


[difftool "difftastic"]
    # See `man git-difftool` for a description of MERGED, LOCAL and REMOTE.
    cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"

[difftool]
    # Run the difftool immediately, don't ask 'are you sure' each time.
    prompt = false

[pager]
    # Use a pager if the difftool output is larger than one screenful,
    # consistent with the behaviour of `git diff`.
    difftool = true

[diff]
    ; external = difft
    tool = difftastic

[interactive]
    diffFilter = delta --color-only
    singlekey = true

[delta]
    navigate = true
    side-by-side = true

[merge]
    conflictstyle = zdiff3

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[pull]
    default = current
    rebase = true

[log]
    abbrevCommit = true
    graphColors = blue,yellow,cyan,magenta,green,red

[color "decorate"]
    HEAD = red
    branch = blue
    tag = yellow
    remoteBranch = magenta

[color "branch"]
    current = magenta
    local = default
    remote = yellow
    upstream = green
    plain = blue

[branch]
    sort = -committerdate

[tag]
    sort = -taggerdate
